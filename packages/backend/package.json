{
  "name": "@wqbot/backend",
  "version": "0.1.0",
  "description": "WQBot HTTP Backend Service - Fastify server with SSE support",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "wqbot-server": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@wqbot/core": "workspace:*",
    "@wqbot/models": "workspace:*",
    "@wqbot/skills": "workspace:*",
    "@wqbot/storage": "workspace:*",
    "@wqbot/security": "workspace:*",
    "fastify": "^4.26.0",
    "@fastify/cors": "^9.0.0",
    "@fastify/static": "^7.0.0",
    "chokidar": "^3.6.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  }
}
